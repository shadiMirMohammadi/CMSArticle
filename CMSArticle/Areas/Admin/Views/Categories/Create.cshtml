@model CMSArticle.Views.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "ثبت دسته بندی جدید |";
}

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="create">
        <div class="form-horizontal">
            <div>
                <h4>ثبت دسته بندی جدید</h4>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group flex">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2  " })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group flex">
                @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    <img src="~/Image/Category/NoImages.png" id="newImagePreview" class="img-create-category" />
                    <input class="margin-t-75-r-30" type="file" id="imageUpload" name="imageUpload" onclick="imagePreview(this)" value="NoImage.png" />
                    @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-info" })
                    <input type="submit" value="ثبت" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
