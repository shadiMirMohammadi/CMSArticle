@model CMSArticle.Views.ViewModels.CategoryViewModel

@{
    ViewBag.Title = " ثبت دسته بندی جدید |";
}




@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="create">

        <div class="form-horizontal">
            <div>
                <h4>ثبت دسته بندی جدید</h4>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-label">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <span style="padding-top: 40px;">
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </span>
            </div>

            <div class="form-label">
                @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    <img src="~/Image/Category/NoImages.png" id="newImagePreview" /> <br />

                    @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <input type="file" id="imageUpload" name="imageUpload" onclick="imagePreview(this)" value="NoImage.png" />
            </div>

            <div class="form-row">
                <div class="col">
                    @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-info btn-color-white" })
                    <input type="submit" value="ثبت" class="btn btn-success "  style="margin-right:10px;"/>
                </div>
            </div>

        </div>
    </div>
}

<script src="~/Scripts/site.js"></script>
