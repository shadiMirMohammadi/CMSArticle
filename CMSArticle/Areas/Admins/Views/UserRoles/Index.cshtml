@model IEnumerable<CMSArticle.Views.ViewModels.UserRoleViewModel>

@{
    ViewBag.Title = " کاربران |";
    int count = 1;
}
<div class="index">
    <div>
        <h1>لیست کاربران</h1>
        <div>
            @Html.ActionLink("ثبت کاربر جدید", "Create", null, new { @class = "btn-color btn btn-success" })
        </div>
    </div>
    <div class="flex-space-around">
        <div class="table-col">
            ردیف
        </div>
        <div class="table-col">
            نام و نام خانوادگی
        </div>
        <div class="table-col">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </div>
        <div class="table-col">
            @Html.DisplayNameFor(model => model.IsActive)
        </div>
        <div class="table-col-operation">
            عملیات
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="flex-space-around">
            <div class="table-col">
                @count
            </div>
            <div class="table-col">
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.Family)
            </div>
            <div class="table-col">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </div>
            <div class="table-col">
                @if (item.IsActive == true)
                {
                    <span class="color-grean">فعال</span>
                }
                else
                {
                    <span class="color-red" >غیر فعال</span>
                }
            </div>
            <div class="table-col-operation">
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
               
                <a class="btn btn-danger margin-r-5 margin-l-5 btn-color-white" onclick="UserDelete(@item.Id)">
                    حذف
                </a>
            </div>
        </div>
        count++;
    }
</div>

<script src="~/Scripts/site.js"></script>
